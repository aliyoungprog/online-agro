                <!--                android:background="@drawable/scrim_topdown"-->
                <!--                android:fitsSystemWindows="true"-->
                <!--                app:layout_constraintTop_toTopOf="parent" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/weather_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Город"
                        android:textColor="@color/blue_main_secondary"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/weather_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Переменная облачность"
                        android:textColor="@color/blue_main_secondary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/weather_current_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="19°|13°"
                        android:textColor="@color/blue_main_secondary"
                        android:textSize="65sp" />

                    <TextView
                        android:id="@+id/weather_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Четверг, 19 ноября"
                        android:textColor="@color/blue_main_secondary"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/upcoming_water"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Предстоящее время полива: Сегодня"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/weatherDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/weather_item"
                />


